<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <include layout="@layout/back_header" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="180dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/myinfo_bg" />

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="71dp"
            android:layout_height="71dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="145dp"
            android:background="#ffffff" >

            <ImageView
                android:id="@+id/headerImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/test_headimage5"
                android:onClick="onClick" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/view1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/relativeLayout1"
            android:layout_marginTop="40dp"
            android:orientation="vertical" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/line" />

            <RelativeLayout
                android:id="@+id/myinfo_yue"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:onClick="onClick"
                android:background="@drawable/white_selector" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:text="我的余额"
                    android:textColor="@color/texttitle" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textView3"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/textView3"
                    android:text="44元"
                    android:textColor="@color/textcontent" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/line" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:onClick="onClick"
                android:background="@drawable/white_selector" >

                <TextView
                    android:id="@+id/textView3222"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:text="手机号码"
                    android:textColor="@color/texttitle" />

                <TextView
                    android:id="@+id/textView4333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textView3222"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/textView3222"
                    android:text="13244422122"
                    android:textColor="@color/textcontent" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/line" />

            <RelativeLayout
                android:id="@+id/myinfo_mylink"
                android:onClick="onClick"
                android:background="@drawable/white_selector"
                android:layout_width="fill_parent"
                android:layout_height="60dp" >

                <TextView
                    android:id="@+id/textView322"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:text="专属链接"
                    android:textColor="@color/texttitle" />

                <TextView
                    android:id="@+id/textView422"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textView322"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/textView322"
                    android:text="http://www.baidu.com/toast?id=1010"
                    android:textColor="@color/textcontent" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/line" />

            <RelativeLayout
                android:onClick="onClick"
                android:id="@+id/myinfo_erweima"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:background="@drawable/white_selector" >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:text="二 维 码"
                    android:textColor="@color/texttitle" />

                <ImageView
                    android:id="@+id/image8"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:layout_toRightOf="@+id/textView5"
                    android:background="@drawable/testerweima" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/line" />
        </LinearLayout>

        <TextView
            android:id="@+id/myinfo_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/view1"
            android:layout_marginLeft="26dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/relativeLayout1"
            android:text="流金岁月"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/myinfo_normalinfo333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/myinfo_nickname"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/myinfo_nickname"
            android:text="Lv.0"
            android:textColor="#6e7d83"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/myinfo_normalinfo"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/myinfo_nickname"
            android:layout_below="@+id/myinfo_nickname"
            android:layout_marginTop="10dp"
            android:text="男21岁 河北省 石家庄"
            android:textColor="@color/textcontent"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/myinfo_edit"
            android:layout_width="25dp"
            android:onClick="onClick"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/myinfo_normalinfo333"
            android:layout_marginRight="42dp"
            android:src="@drawable/edit_button" />

    </RelativeLayout>

</LinearLayout>