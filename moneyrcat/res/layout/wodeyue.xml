<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wodeyue"
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:onClick="onClick"
    android:layout_alignParentLeft="true"
    android:background="#f4f4f4" >

    <ImageView
        android:id="@+id/myheaderimage"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:onClick="onClick"
        android:layout_marginLeft="10dp"
        android:background="@drawable/header_normal_icon" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/myheaderimage"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/myheaderimage"
        android:text="Lv.0"
        android:textColor="#6e7d83"
        android:textSize="10sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/yue_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="余额:4.8 元"
            android:textColor="#6e7d83" />

        <Button
            android:id="@+id/mingxi_button"
            android:onClick="onClick"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_height="28dp"
            android:background="@drawable/black_button"
            android:text="明细"
            android:textColor="#ffffff"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:textSize="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView1"
        android:layout_marginLeft="10dp"
        android:textColor="#6e7d83"
        android:layout_toRightOf="@+id/textView1"
        android:text="13922334444" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/line" />

</RelativeLayout>