            </intent-filter>
        </activity>
        <activity
            android:name="com.emperises.monercat.ui.RecommendActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name="com.emperises.monercat.ui.WoDebActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name="com.emperises.monercat.ui.MoreActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name="com.emperises.monercat.ui.RecommendDialogActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name="com.emperises.monercat.ui.WoDeTabActivity"
            android:launchMode="singleTop"
